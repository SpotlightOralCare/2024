{
  "type": "header",
  "name": "Header group",
  "sections": {
    "announcement-bar": {
      "type": "announcement-bar",
      "blocks": {
        "message-1": {
          "type": "message",
          "settings": {
            "text": "Summer SALE Now On",
            "link": "",
            "icon": "picto-coupon",
            "icon_width": 16
          }
        },
        "message-3": {
          "type": "message",
          "settings": {
            "text": "Free delivery over €60",
            "link": "",
            "icon": "picto-delivery-truck",
            "icon_width": 16
          }
        },
        "message-5": {
          "type": "message",
          "settings": {
            "text": "Pay in 3 with Klarna",
            "link": "",
            "icon": "picto-star",
            "icon_width": 16
          }
        }
      },
      "block_order": [
        "message-1",
        "message-3",
        "message-5"
      ],
      "settings": {
        "color_scheme": "",
        "enable_sticky": true,
        "autoplay": true,
        "enable_arrows": false,
        "cycle_speed": 5,
        "desktop_font_size": 11,
        "mobile_font_size": 10
      }
    },
    "countdown": {
      "type": "countdown-condensed",
      "disabled": true,
      "settings": {
        "color_scheme": "",
        "content": "Sale Ends Midnight",
        "link_text": "Shop Sale",
        "link_url": "shopify:\/\/collections\/all-products",
        "expiration_date": "2024-01-04 23:59",
        "expiration_behavior": "hide",
        "desktop_justification": "space-between"
      }
    },
    "header": {
      "type": "header",
      "blocks": {
        "mega-1": {
          "type": "mega_menu",
          "settings": {
            "menu_item": "SHOP",
            "images_position": "right",
            "image_1_heading": " ",
            "image_1_text": "",
            "image_1_link": "",
            "image_2_heading": "",
            "image_2_text": "",
            "image_2_link": ""
          }
        },
        "mega-2": {
          "type": "mega_menu",
          "settings": {
            "menu_item": "About",
            "images_position": "right",
            "image_1": "shopify:\/\/shop_images\/Dr-Lisa-_-Vanessa-1-Square-TRANSPARENT-PNG-COMPRESSED.png",
            "image_1_heading": "MADE BY <strong>DENTISTS<\/strong>",
            "image_1_text": "",
            "image_1_link": "shopify:\/\/pages\/about",
            "image_2_heading": "",
            "image_2_text": "",
            "image_2_link": ""
          }
        }
      },
      "block_order": [
        "mega-1",
        "mega-2"
      ],
      "custom_css": [
        ".mega-menu__promo .h6 {font-size: 95%;}",
        ".mega-menu__promo p:not(.h6) {color: #fb5373;}"
      ],
      "settings": {
        "color_scheme": "",
        "enable_sticky": true,
        "hide_on_scroll": false,
        "show_separation_border": false,
        "reduce_padding": true,
        "logo": "{{ shop.brand.logo }}",
        "logo_max_width": 140,
        "logo_mobile_max_width": 100,
        "menu": "image-menu",
        "sidebar_menu": "sidebar-menu",
        "menu_open_trigger": "click",
        "enable_search": true,
        "sidebar_color_scheme": "",
        "sidebar_text_font": "heading",
        "sidebar_show_dividers": true,
        "layout": "logo_center_navigation_inline",
        "show_icons": true,
        "show_country_selector": false,
        "show_country_name": false,
        "show_country_flag": false,
        "show_locale_selector": false,
        "transparent_header_text_color": "#2d2a26",
        "transparent_logo": "{{ shop.brand.logo }}"
      }
    }
  },
  "order": [
    "announcement-bar",
    "countdown",
    "header"
  ]
}
